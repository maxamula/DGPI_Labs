<Window x:Class="DGPI_Labs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGPI_Labs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Label DockPanel.Dock="Top" Content="Label" HorizontalAlignment="Center"/>
        <TextBox Text="Text" Width="300" DockPanel.Dock="Left"/>
        <TextBox Text="Text" Width="300" DockPanel.Dock="Right"/>
        <Button Width="100" Height="25" VerticalAlignment="Bottom" Margin="0, 50" Content="Button"/>

    </DockPanel>
</Window>
